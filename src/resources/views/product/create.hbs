<link rel="stylesheet" href="/css/create-product.css" />
<div class="page-wrapper p-t-100 p-b-50">
    <div class="wrapper wrapper--w900">
        <div class="card card-6" style="border: none;">
            {{#if success}}
            <h3 class="success text-success">Thêm sản phẩm thành công</h3>
            {{/if}}
            {{#if error}}
            <h3 class="success text-danger">Thêm thất bại. Kiểm tra lại!</h3>
            {{/if}}
            <div class="card-heading">
                <h2 class="title">Thêm sản phẩm</h2>
            </div>
            <div class="card-body">
                <form action="/product/create" method="POST" class="form-create" id="form-create"
                    enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="name">Thể loại</div>
                        <div class="value">
                            <select name="category" id="category" class="input--style-6" style="height: 40px;">
                                {{#each category}}
                                <option value="{{this._id}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Tên sản phẩm</div>
                        <div class="value">
                            <input class="input--style-6" type="text" name="name">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Giá</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-6" type="text" name="price">
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Ảnh</div>
                        <div class="value" style="position: relative;">
                            <label class="label-img" for="image" style="width: 100%;
                                        height: 100%;
                                        padding: 70px 0;
                                        border: 4px dashed #000;
                                        text-align: center;">Chưa upload file nào.Upload tối đa 5 ảnh</label>
                            <input type="file" id="image" name="image" multiple style="position: absolute;
                                        top: 0;
                                        bottom: 0;
                                        left: 0;
                                        right: 0;
                                        opacity: 0;" required />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Số lượng</div>
                        <div class="value">
                            <div class="input-group">
                                <input type="number" class="input--style-6" name="quantity" />
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Tiêu đề</div>
                        <div class="value">
                            <div class="input-group">
                                <input type="text" class="input--style-6" name="title" />
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="name">Miêu tả</div>
                        <div class="value">
                            <div class="input-group">
                                <textarea class="textarea--style-6" name="description"
                                    placeholder="Miêu tả của sản phẩm"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer d-flex justify-content-center">
                <button class="btn btn--radius-2 btn--blue-2 btn-submit" type="submit">Thêm sản phẩm</button>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('form input[type="file"]').change(function () {
            $('.label-img').text(this.files.length + " file(s) selected");
        });
    });
    $(document).on('click', '.btn-submit', () => {
        $('.form-create')[0].submit();
    })

    //sự kiện submit
    $(document).on('submit', '#form-create', (e) => {
        e.preventDefault();
        var input = document.getElementById('image');
        if (input.files.length > 5) {
            alert('Số file upload tối đa là 5');
        }
        else if(input.files.length == 0){
            alert("Chưa chọn ảnh sản phẩm");
        }
        else {
            $('#form-create')[0].submit();
        }
    })
</script>